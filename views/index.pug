                  span.big-icon
                    i.fa.fa-play
              img(src="images/slider/slider-2.jpg")
            el-carousel-item
              div(style="position:absolute;left:42%;top:30%")
                a.big-icon-link.lightbox-gallery-1.mfp-iframe(href='https://v.qq.com/txp/iframe/player.html?vid=f0865xy35p7')
                  span.big-icon
                    i.fa.fa-play
              img(src="images/slider/slider-3.jpg")

  script(src="https://unpkg.com/vue/dist/vue.js")
