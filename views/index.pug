extends layout

block content 
  style.
    .el-carousel__item h3 {
    color: #475669;
    font-size: 14px;
    opacity: 0.75;
    line-height: 200px;
    margin: 0;
    }
    .el-carousel__item:nth-child(2n) {
    background-color: #99a9bf;
    }
    .el-carousel__item:nth-child(2n+1) {
    background-color: #d3dce6;
    }
    #app{
      bottom:500px;
      position:relative;
      height:0;

    }
  link(rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css")
  section.home-section.parallax-2.bg-dark-alfa-30(data-background='images/full-width-images/hero-1.jpg' style="height:1400px;background-attachment: fixed;")
    .fullwidth-slider.owl-carousel
      .js-height-full.container
        .home-content
          .home-text
            h1.hs-line-8.no-transp.font-alt.mb-50.mb-xs-30  ETHOOW
            h2.hs-line-14.font-alt.mb-50.mb-xs-30  以太户外俱乐部
            .local-scroll
              a.btn.btn-mod.btn-border-w.btn-medium.btn-round.hidden-xs(href='/dive') 高空跳伞
  .container
    .row.align-center
      .col-sm-12
       
        div(id="app" )
          img(style="width: 500px;margin-bottom:0px " src="images/水印.png"  )
          el-carousel(:interval="4000" type="card")
            el-carousel-item
              div(style="position:absolute;left:42%;top:30%")
                a.big-icon-link.lightbox-gallery-1.mfp-iframe(href='https://v.qq.com/txp/iframe/player.html?vid=h0865vurtje')
